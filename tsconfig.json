{
    "compilerOptions": {
        "allowJs": true,

        "target": "es2018",
        "module": "commonjs",
        "esModuleInterop": false,
        "removeComments": true,
        "strict": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "outDir": "./target"
    },
    "include": [
        "*.ts",
        ".eslintrc.js"
    ]
}
