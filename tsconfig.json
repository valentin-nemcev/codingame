{
    "compilerOptions": {
        "allowJs": true,
        "resolveJsonModule": true,

        "target": "es2018",
        "module": "commonjs",
        "esModuleInterop": true,
        "removeComments": true,
        "strict": true,

        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "outDir": "./target"
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts", ".eslintrc.js", "jest.config.js"]
}
